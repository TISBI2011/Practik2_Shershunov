<Page x:Class="Shershunov_Practika2.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shershunov_Practika2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock Text="Меню кинотеатра"/>
            <Button x:Name="BFilm" Content="Фильмы" Click="BFilm_Click"/>
            <Button x:Name="BGenre" Content="Жанр" Click="BGenre_Click"/>
            <Button x:Name="BZakr" Content="Закрыть" Click="BZakr_Click"/>
        </StackPanel>
        <Frame x:Name="MainFrame" Grid.Column="1"/>
    </Grid>
</Page>
